<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_header_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingBottom="@dimen/define_dimen_8"
    android:paddingTop="@dimen/define_dimen_8">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/define_dimen_12"
        android:src="@drawable/ic_menu_black" />

    <com.app.etow.ui.widget.textview.TahomaRegularTextView
        android:id="@+id/tv_title_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_xxnormal" />

    <RelativeLayout
        android:id="@+id/layout_notification"
        android:layout_width="@dimen/define_dimen_38"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/define_dimen_10">

        <ImageView
            android:id="@+id/img_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_notification_black" />

        <TextView
            android:id="@+id/tv_count_trip_schedule"
            android:layout_width="@dimen/define_dimen_28"
            android:layout_height="@dimen/define_dimen_28"
            android:background="@drawable/shape_circle_red"
            android:gravity="center"
            android:padding="@dimen/define_dimen_6"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxsmall" />

    </RelativeLayout>
</RelativeLayout>
