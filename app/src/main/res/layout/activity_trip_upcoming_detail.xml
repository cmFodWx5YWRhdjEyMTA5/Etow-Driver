<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal"
                android:padding="@dimen/define_dimen_14">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/define_dimen_6"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trip_no"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_trip_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/define_dimen_14">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/estimated_price"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/define_dimen_10"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_xnormal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="@dimen/define_dimen_12"
                    android:layout_marginTop="@dimen/define_dimen_12"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_name"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/define_dimen_10"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="@dimen/define_dimen_12"
                    android:layout_marginTop="@dimen/define_dimen_12"
                    android:background="@color/dividerColor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/view_1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pick_up_location"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_small" />

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:id="@+id/tv_pick_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_1"
                        android:layout_width="0.1dp"
                        android:layout_height="@dimen/define_dimen_40"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/define_dimen_10"
                        android:layout_marginStart="@dimen/define_dimen_10"
                        android:layout_toStartOf="@+id/layout_view_map_pick_up"
                        android:background="@color/dividerColor" />

                    <LinearLayout
                        android:id="@+id/layout_view_map_pick_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/view"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_small" />

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/on_map"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_black" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="@dimen/define_dimen_12"
                    android:layout_marginTop="@dimen/define_dimen_12"
                    android:background="@color/dividerColor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/view_2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drop_off_location"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_small" />

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:id="@+id/tv_drop_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_2"
                        android:layout_width="0.1dp"
                        android:layout_height="@dimen/define_dimen_40"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/define_dimen_10"
                        android:layout_marginStart="@dimen/define_dimen_10"
                        android:layout_toStartOf="@+id/layout_view_map_drop_off"
                        android:background="@color/dividerColor" />

                    <LinearLayout
                        android:id="@+id/layout_view_map_drop_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/view"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_small" />

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/on_map"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_black" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="@dimen/define_dimen_12"
                    android:layout_marginTop="@dimen/define_dimen_12"
                    android:background="@color/dividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_of_recovery"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/define_dimen_5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_vehicle_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:id="@+id/tv_vehicle_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/define_dimen_10"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_type"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/define_dimen_5"
                            android:background="@drawable/bg_white_corner_border_grey_radius_8"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/define_dimen_6"
                            android:paddingEnd="@dimen/define_dimen_16"
                            android:paddingStart="@dimen/define_dimen_16"
                            android:paddingTop="@dimen/define_dimen_6">

                            <ImageView
                                android:id="@+id/img_payment_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:id="@+id/tv_payment_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/define_dimen_6"
                                android:gravity="center"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_normal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.app.etow.ui.widget.textview.TahomaRegularTextView
                    android:id="@+id/tv_arrived_at_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/define_dimen_10"
                    android:layout_marginTop="@dimen/define_dimen_20"
                    android:background="@drawable/bg_black_corner"
                    android:gravity="center"
                    android:paddingBottom="@dimen/define_dimen_14"
                    android:paddingTop="@dimen/define_dimen_14"
                    android:text="@string/arrived_at_pickup_location"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:id="@+id/layout_call_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_black_corner"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/define_dimen_6"
                        android:src="@drawable/ic_phone_white" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/define_dimen_14"
                        android:paddingTop="@dimen/define_dimen_14"
                        android:text="@string/call_custome"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
