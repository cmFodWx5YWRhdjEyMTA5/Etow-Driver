<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/define_dimen_16"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/define_dimen_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_6"
            android:background="@color/black"
            android:padding="@dimen/define_dimen_6">

            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />

            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_6"
            android:layout_marginEnd="@dimen/define_dimen_6"
            android:layout_marginStart="@dimen/define_dimen_6"
            android:background="@drawable/bg_grey_corner_radius_6"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_6">

            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_title_pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_up_location"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_small" />

            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_pick_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_6"
            android:layout_marginEnd="@dimen/define_dimen_6"
            android:layout_marginStart="@dimen/define_dimen_6"
            android:background="@drawable/bg_grey_corner_radius_6"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_6">

            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_title_drop_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drop_off_location"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_small" />

            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                android:id="@+id/tv_drop_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_6"
            android:layout_marginEnd="@dimen/define_dimen_6"
            android:layout_marginStart="@dimen/define_dimen_6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.etow.ui.widget.textview.TahomaRegularTextView
                    android:id="@+id/tv_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_black_corner_radius_6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/define_dimen_6"
                    android:paddingEnd="@dimen/define_dimen_16"
                    android:paddingStart="@dimen/define_dimen_16"
                    android:paddingTop="@dimen/define_dimen_6"
                    android:text="@string/view_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <com.app.etow.ui.widget.textview.TahomaRegularTextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/define_dimen_8"
                    android:background="@drawable/bg_black_corner_radius_6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/define_dimen_6"
                    android:paddingEnd="@dimen/define_dimen_16"
                    android:paddingStart="@dimen/define_dimen_16"
                    android:paddingTop="@dimen/define_dimen_6"
                    android:text="@string/open"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
