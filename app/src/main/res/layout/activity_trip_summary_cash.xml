<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_done">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:padding="@dimen/define_dimen_14">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/define_dimen_6"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trip_no"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small" />

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:id="@+id/tv_trip_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small" />

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/define_dimen_14">

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_name"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="@dimen/define_dimen_12"
                        android:layout_marginTop="@dimen/define_dimen_12"
                        android:background="@color/dividerColor" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pick_up_location"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_pick_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="@dimen/define_dimen_12"
                        android:layout_marginTop="@dimen/define_dimen_12"
                        android:background="@color/dividerColor" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drop_off_location"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/text_size_small" />

                    <com.app.etow.ui.widget.textview.TahomaRegularTextView
                        android:id="@+id/tv_drop_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/text_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginBottom="@dimen/define_dimen_12"
                        android:layout_marginTop="@dimen/define_dimen_12"
                        android:background="@color/dividerColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_black_corner_left_right_top_8"
                        android:orientation="horizontal"
                        android:padding="@dimen/define_dimen_8">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/define_dimen_12"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_amount"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_xnormal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payment_type"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_small" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/define_dimen_2"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_payment_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <com.app.etow.ui.widget.textview.TahomaRegularTextView
                                    android:id="@+id/tv_payment_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/define_dimen_6"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_normal" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/define_dimen_20"
                        android:background="@drawable/bg_grey_corner_left_right_bottom_8"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/define_dimen_12">

                        <com.app.etow.ui.widget.textview.TahomaRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cash_received"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                        <RelativeLayout
                            android:id="@+id/layout_check"
                            android:layout_width="@dimen/define_dimen_50"
                            android:layout_height="@dimen/define_dimen_50"
                            android:layout_marginBottom="@dimen/define_dimen_4"
                            android:layout_marginTop="@dimen/define_dimen_12"
                            android:background="@drawable/shape_circle_white">

                            <ImageView
                                android:id="@+id/img_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_check_grey" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <com.app.etow.ui.widget.textview.TahomaRegularTextView
            android:id="@+id/tv_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/define_dimen_16"
            android:layout_marginEnd="@dimen/define_dimen_14"
            android:layout_marginStart="@dimen/define_dimen_14"
            android:background="@drawable/bg_grey_corner"
            android:gravity="center"
            android:paddingBottom="@dimen/define_dimen_14"
            android:paddingTop="@dimen/define_dimen_14"
            android:text="@string/done"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>
</LinearLayout>
